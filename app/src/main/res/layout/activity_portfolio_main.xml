<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#66E2E7"
    tools:context="qorda_projects.sorengoardappportfolio.PortfolioMain">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:textColor="#00878D"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20sp"
        android:paddingBottom="10sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/popmovies"
        android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:text="Popular Movies"
        android:layout_marginBottom="10sp"
    android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#F36BB8"
        android:onClick="popMovies"

    />

    <Button
        android:id="@+id/stockhawk"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popmovies"
        android:text="Stock Hawk"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#F36BB8"
        android:layout_marginBottom="10sp"
        android:onClick="stockHawk"
        />

    <Button
        android:id="@+id/buildit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stockhawk"
        android:text="Build it Bigger"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#F36BB8"
        android:layout_marginBottom="10sp"
        android:onClick="builtItBigger"
        />
    <Button
        android:id="@+id/material"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildit"
        android:text="Make Your App Material"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#F36BB8"
        android:layout_marginBottom="10sp"
        android:onClick="makeAppMaterial"
        />

    <Button
        android:id="@+id/ubiquitous"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/material"
        android:text="Go Ubiquitous"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#F36BB8"
        android:layout_marginBottom="10sp"
        android:onClick="goUbiquitous"
        />

    <Button
        android:id="@+id/capstone"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ubiquitous"
        android:text="Capstone"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#F36BB8"
        android:layout_marginBottom="10sp"
        android:onClick="capstone"
        />


</RelativeLayout>
